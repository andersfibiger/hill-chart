{
  "name": "hill-chart",
  "description": "Basecamp's hill chart implementation in d3.js",
  "version": "1.0.0",
  "main": "src/index.js",
  "scripts": {
    "clean": "rimraf dist",
    "prebuild": "yarn clean",
    "build": "rollup -c",
    "lint": "eslint .",
    "lint:fix": "eslint . --fix",
    "format": "prettier --write \"**/*.+(js|json|yml|yaml|css|md)\""
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "*.+(json|css|md|yaml|yml)": [
      "yarn format",
      "git add"
    ],
    "*.js": [
      "yarn lint:fix",
      "yarn format",
      "git add"
    ]
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/nagi1/hill-chart"
  },
  "keywords": [
    "basecamp",
    "hill chart",
    "project management",
    "js",
    "d3js"
  ],
  "author": "Ahmed Nagi <ahmedflnagi@gmail.com> (https://ahmednagi.com)",
  "license": "MIT",
  "bugs": {
    "email": "bugs@ahmednagi.com",
    "url": "https://github.com/nagi1/hill-chart/issues"
  },
  "homepage": "https://github.com/nagi1/hill-chart#readme",
  "devDependencies": {
    "@babel/core": "^7.9.6",
    "@babel/preset-env": "^7.9.6",
    "@rollup/plugin-babel": "^5.0.0",
    "@rollup/plugin-node-resolve": "^7.1.3",
    "eslint": "6.8.0",
    "eslint-config-airbnb-base": "14.1.0",
    "eslint-config-prettier": "^6.11.0",
    "eslint-plugin-import": "2.20.1",
    "eslint-plugin-prettier": "^3.1.3",
    "husky": "^4.2.5",
    "lint-staged": "^10.2.2",
    "prettier": "^2.0.5",
    "rimraf": "^3.0.2",
    "rollup": "^2.10.2",
    "rollup-plugin-terser": "^5.3.0"
  }
}
